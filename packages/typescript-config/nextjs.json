{
    "extends": "./base.json",
    "compilerOptions": {
      "jsx": "react-jsx",
      "allowJs": true,
      "isolatedModules": true,
      "moduleResolution": "node",
      "resolveJsonModule": true,
      "skipLibCheck": true,
      "noEmit": true,
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["**/*.ts", "**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }
  